{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "strict": true,
    "target": "es6",
    "module": "NodeNext",
    "noEmit": true,
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "rootDir": "src",
    "baseUrl": "./src"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}